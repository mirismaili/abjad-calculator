{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"no-tabs": "off",
		"indent": [
			"error",
			"tab"
		],
		"curly": [
			"error",
			"multi"
		],
		"object-curly-spacing": [
			"warn",
			"never",
			{
				"arraysInObjects": false,
				"objectsInObjects": false
			}
		],
		"object-curly-newline": [
			"warn",
			{
				"consistent": true
			}
		],
		"no-trailing-spaces": [
			"warn",
			{
				"skipBlankLines": true
			}
		],
		"no-multi-spaces": [
			"warn",
			{
				"ignoreEOLComments": true,
				"exceptions": {
					"Property": false,
					"VariableDeclarator": true,
					"ImportDeclaration": true
				}
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"no-unused-vars": "warn",
		"no-multiple-empty-lines": "warn",
		"comma-dangle": [
			"warn",
			"always-multiline"
		]
	}
}
